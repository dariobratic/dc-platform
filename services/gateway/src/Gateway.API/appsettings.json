{
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Expressions"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "Enrich": ["FromLogContext"],
    "Properties": {
      "Service": "Gateway"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "{@t:yyyy-MM-dd HH:mm:ss.fff} [{@l:u3}] {Service} [{CorrelationId}] {@m}\n{@x}"
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "../../../infrastructure/logs/gateway/log-.json",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "{ {timestamp: @t, level: @l, service: Service, correlationId: CorrelationId, message: @m, userId: UserId, organizationId: OrganizationId, workspaceId: WorkspaceId, requestPath: RequestPath, requestMethod: RequestMethod, statusCode: StatusCode, duration: Elapsed, exceptionType: @x?.GetType().Name, exceptionMessage: @x?.Message, stackTrace: @x?.ToString(), ..@p} }\n"
          }
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "organizations-route": {
        "ClusterId": "directory",
        "Match": {
          "Path": "/api/v1/organizations/{**catch-all}"
        }
      },
      "workspaces-route": {
        "ClusterId": "directory",
        "Match": {
          "Path": "/api/v1/workspaces/{**catch-all}"
        }
      },
      "memberships-route": {
        "ClusterId": "directory",
        "Match": {
          "Path": "/api/v1/memberships/{**catch-all}"
        }
      },
      "invitations-route": {
        "ClusterId": "directory",
        "Match": {
          "Path": "/api/v1/invitations/{**catch-all}"
        }
      },
      "auth-route": {
        "ClusterId": "authentication",
        "Match": {
          "Path": "/api/v1/auth/{**catch-all}"
        }
      },
      "roles-route": {
        "ClusterId": "access-control",
        "Match": {
          "Path": "/api/v1/roles/{**catch-all}"
        }
      },
      "permissions-route": {
        "ClusterId": "access-control",
        "Match": {
          "Path": "/api/v1/permissions/{**catch-all}"
        }
      },
      "audit-route": {
        "ClusterId": "audit",
        "Match": {
          "Path": "/api/v1/audit/{**catch-all}"
        }
      },
      "notifications-route": {
        "ClusterId": "notification",
        "Match": {
          "Path": "/api/v1/notifications/{**catch-all}"
        }
      },
      "config-route": {
        "ClusterId": "configuration",
        "Match": {
          "Path": "/api/v1/config/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "directory": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "authentication": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "access-control": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "audit": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004"
          }
        }
      },
      "notification": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5005"
          }
        }
      },
      "configuration": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5006"
          }
        }
      }
    }
  }
}
