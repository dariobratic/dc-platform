{
  "name": "dc-platform",
  "version": "0.15.0",
  "private": true,
  "description": "Multi-tenant enterprise workflow automation platform",
  "scripts": {
    "dev:shell": "pnpm --filter shell dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:client": "pnpm --filter client dev",
    "build:shell": "pnpm --filter shell build",
    "build:admin": "pnpm --filter admin build",
    "build:client": "pnpm --filter client build",
    "preview:shell": "pnpm --filter shell preview",
    "preview:admin": "pnpm --filter admin preview",
    "preview:client": "pnpm --filter client preview",
    "lint:shell": "pnpm --filter shell lint",
    "type-check:shell": "pnpm --filter shell type-check",
    "type-check:admin": "pnpm --filter admin type-check",
    "type-check:client": "pnpm --filter client type-check",
    "build:remotes": "pnpm --filter admin build && pnpm --filter client build",
    "dev:all": "pnpm --parallel --filter shell --filter admin --filter client dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "pnpm --filter @dc-platform/e2e test",
    "test:e2e:ui": "pnpm --filter @dc-platform/e2e test:ui",
    "test:e2e:report": "pnpm --filter @dc-platform/e2e test:report",
    "docker:up": "docker compose -f infrastructure/docker-compose.yml up -d --build",
    "docker:down": "docker compose -f infrastructure/docker-compose.yml down",
    "docker:logs": "docker compose -f infrastructure/docker-compose.yml logs -f"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "vitest": "^3.0.4",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^17.4.4",
    "@pinia/testing": "^0.1.7",
    "@vitejs/plugin-vue": "^5.2.1"
  }
}
